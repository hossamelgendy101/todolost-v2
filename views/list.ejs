<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">
  <div>
    <% listIteams.forEach(function(iteam){ %>
      <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%=iteam._id%>"/>
      <input type="hidden" name="listName" value="<%= listTitle %>"/>
      <p><%= iteam.name %></p>
    </div>
    </form>
    <% }) %>
  </div>

  <form action="/" method="post" class="item">
    <input type="text" name="listIteam" placeholder="New Iteam" />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

</body>

</html>